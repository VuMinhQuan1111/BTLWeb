@model IEnumerable<BTLWeb.Models.TblPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách bài viết</h1>

<p>
    <a asp-action="Create">Tạo bài viết</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.PostTitle) *@
                Tên bài viết
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PostContent) *@
                Nội dung bài viết
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PostImg) *@
                Ảnh bài viết
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PostAuthor)
            </th>*@
            <th>
                @* @Html.DisplayNameFor(model => model.PostCreateAt) *@
                Thời gian tạo
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Category) *@
                Danh mục
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Users) *@
                Người đăng
            </th>
            <th>
                Xử lý
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostContent)
            </td>
            <td>
                <img src="/PostImg/@item.PostImg" alt="Post Image" width="100" height="100">
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PostAuthor)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PostCreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.UsersName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
