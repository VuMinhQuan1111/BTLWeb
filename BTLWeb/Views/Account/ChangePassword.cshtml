@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">
            <h2 class="heading-section">Đổi Mật Khẩu</h2>
            @* <p style="color: red">@ViewBag.ancap</p> *@
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="login-wrap p-4 p-md-5">
                <form method="post" asp-controller="Account" asp-action="ChangePassword" class="login-form">
                    <div class="form-group">
                        <input type="password" class="form-control rounded-left" name="UsersOldPass" placeholder="Mật Khẩu Cũ" required>
                        <span asp-validation-for="UsersOldPass" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex">
                        <input type="password" class="form-control rounded-left" name="UsersNewPass" placeholder="Mật Khẩu" required>
                        <span asp-validation-for="UsersNewPass" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex">
                        <input type="password" class="form-control rounded-left" name="ConfirmPass" placeholder="Xác Nhận Mật Khẩu" required>
                        <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                    </div>
                    <div class="form-group d-md-flex">
                        <div class="w-50 text-md-left">
                            <a href="">Đổi Thông Tin</a>
                        </div>
                        <div class="w-50 text-md-right">
                            <a href="">Quay Lại</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Thay Đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>