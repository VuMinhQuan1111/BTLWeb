@model BTLWeb.Models.ModelsView.MV_Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout-Blank.cshtml";
}

    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    @* <img src="../AdminAssets/images/logos/dark-logo.svg" width="180" alt=""> *@
                                <img src="/image/logo-webfood.jpg" width="180" />
                                </a>
                                <p class="text-center">Mạng xã hội Review về Ẩm thực</p>
                                <p style="color: red">@ViewBag.alert</p>
                            
                            <form method="post" asp-area="" asp-controller="Account" asp-action="Register" class="login-form">
                                <div class="form-group mb-3">
                                        <label for="exampleInputtext1" class="form-label">Tên người dùng</label>
                                        <input type="text" name="UsersName" class="form-control" id="exampleInputtext1" aria-describedby="textHelp">
                                    <span asp-validation-for="UsersName" class="text-danger"></span>
                                    </div>
                                <div class="form-group mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Email</label>
                                        <input type="email" name="UsersEmail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                        <span asp-validation-for="UsersEmail" class="text-danger"></span>
                                    </div>
                                <div class="form-group mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                                        <input type="password" name="UsersPass" class="form-control" id="exampleInputPassword1">
                                        <span asp-validation-for="UsersPass" class="text-danger"></span>
                                    </div>
                                <div class="form-group mb-4">
                                    <label for="exampleInputPassword2" class="form-label">Xác nhận mật khẩu</label>
                                    <input type="password" name="ConfirmPass" class="form-control" id="exampleInputPassword2">
                                    <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                                </div>
                                    @* <a href="./index.html" class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Sign Up</a> *@

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Đăng Ký</button>
                                </div>
                               
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Đã có tài khoản?</p>
                                    <a class="text-primary fw-bold ms-2" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                                    </div>
                                </form>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
