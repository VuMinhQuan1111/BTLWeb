@* @model List<BTLWeb.Models.TblUser> *@

@{
    var userinfor = (List<BTLWeb.Models.TblUser>)ViewBag.userinfor;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-4">
            @foreach (var item in userinfor)
            {
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                            <img src="https://t4.ftcdn.net/jpg/02/29/75/83/360_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg"
                                 class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>
                        <h4 class="mb-2">@item.UsersName</h4>
                        <h6 class="mb-2">@item.UsersEmail</h6>
                        <p class="text-muted mb-4">
                            <a href="@Url.Action("Changepass", "Account")">Đổi Mật Khẩu</a>
                        </p>
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                            <div>
                                <p class="mb-2 h5">0</p>
                                <p class="text-muted mb-0">Bài viết đã like</p>
                            </div>
                            @* <div class="px-3">
                                <a href="@Url.Action("Likesonglist", "Account")">
                                    <p class="mb-2 h5">@ViewBag.Soyt</p>
                                    <p class="text-muted mb-0">Lượt Thích</p>
                                </a>
                            </div> *@
                        </div>
                    </div>
                </div>
            }
            <button type="button" class="btn btn-primary">Danh sách bài viết đã thích</button>
        </div>
    </div>
</div>
