@model BTLWeb.Models.TblUser
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout-Blank.cshtml";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-6 col-xxl-3">
                    <div class="card mb-0">
                        <div class="card-body">
                            <a href="#" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="../AdminAssets/images/logos/dark-logo.svg" width="180" alt="">
                            </a>
                            <p class="text-center">Mạng xã hội Review về Ẩm thực</p>
                            <p style="color: red">@ViewBag.alert</p>
                            <form method="post" asp-area="" asp-controller="Account" asp-action="Login" class="login-form">
                                
                               
                                <div class="form-group mb-3">
                                    
                                    <label for="exampleInputName" class="form-label">Username</label>
                                    <input  type="text" name="UsersName" class="form-control" id="exampleInputName" aria-describedby="nameHelp">
                                    <span asp-validation-for="UsersName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <label for="exampleInputPassword1" class="form-label">Password</label>
                                    <input type="password" name="UsersPass" class="form-control" id="exampleInputPassword1">
                                    <span asp-validation-for="UsersPass" class="text-danger"></span>
                                    
                                </div>
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                                        <label class="form-check-label text-dark" for="flexCheckChecked">
                                            Remeber this Device
                                        </label>
                                    </div>
                                    <a class="text-primary fw-bold" href="#">Forgot Password ?</a>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Đăng Nhập</button>
                                </div>
                                @* <a class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Sign In</a> *@
                                <div class="d-flex align-items-center justify-content-center">
                           
                                    <a class="text-primary fw-bold ms-2" asp-controller="Account" asp-action="Register">Create an account</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

